{
    "manifest_version": 3,
    "name": "SVG Grabber",
    "version": "1.0",
    "description": "Effortlessly copy and download SVG images from any webpage with the SVG Grabber Extension.",
    "author": "Yash Dayani",
    "action": {
        "default_popup": "new.html"
        },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["svg_grab.js"]
        }
    ],
    "icons": {
        "128": "logo.png"
    }
}
